<h1>Listing items</h1>

<table>
  <tr>
    <th>Body</th>
    <th>Assigned to</th>
    <th>Completed at</th>
    <th>User</th>
    <th>List</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.body %></td>
    <td><%= item.assigned_to %></td>
    <td><%= item.completed_at %></td>
    <td><%= item.user %></td>
    <td><%= item.list %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

